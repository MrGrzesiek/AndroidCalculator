<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:autoSizeTextType="uniform"
    app:autoSizeMinTextSize="12sp"
    app:autoSizeMaxTextSize="70sp"
    android:background="@color/verydarkred"
    android:textColor="@color/gold">

    <TextView
        android:id="@+id/Number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/orbitron"
        android:text=""
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.95"
        android:textAlignment="textEnd"
        android:textColor="@color/gold"/>

    <TextView
        android:id="@+id/CAL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/orbitron"
        android:text=""
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Number"
        app:layout_constraintWidth_percent="0.95"
        android:textAlignment="textEnd"
        android:textColor="@color/gold"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:alignmentMode="alignMargins"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="1"
        app:rowCount="5"
        android:textColor="@color/gold">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BT1"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="1"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="0"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/BTCCE"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="1"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BT4"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="4"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="0"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/BT1"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="2"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BT7"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="7"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="0"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/BT4"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="3"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BT0"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="1dp"
            android:fontFamily="@font/orbitron"
            android:text="0"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/BTDOOT"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BT7"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTCCE"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="C/CE"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="0"
            app:layout_rowWeight="1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTEQUAL"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="="
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/BTDIV"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="4"
            style="@style/MyButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTAC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="AC"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="1"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/BTCCE"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="0"
            tools:layout_editor_absoluteY="0dp"
            style="@style/MyButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BT2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="2"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="1"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/BT1"
            app:layout_constraintTop_toBottomOf="@+id/BTAC"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="1"
            style="@style/MyButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BT5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="5"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="1"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/BT4"
            app:layout_constraintTop_toBottomOf="@+id/BT2"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="2"
            style="@style/MyButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BT8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="8"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="1"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/BT7"
            app:layout_constraintTop_toBottomOf="@+id/BT5"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="3"
            style="@style/MyButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTDOOT"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/orbitron"
            android:text="."
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/BTEQUAL"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/BT8"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BT9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="9"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="2"
            app:layout_constraintBottom_toTopOf="@+id/BTEQUAL"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/BT8"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="3"
            style="@style/MyButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BT6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="6"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="2"
            app:layout_constraintBottom_toTopOf="@+id/BT9"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/BT5"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="2"
            style="@style/MyButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BT3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="3"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="2"
            app:layout_constraintBottom_toTopOf="@+id/BT6"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/BT2"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="1"
            style="@style/MyButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTDIV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="/"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/BTMULTI"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="4"
            style="@style/functionbutton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTCHANGE"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="+/-"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="0"
            style="@style/functionbutton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTPLUS"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="+"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="3"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/BT3"
            app:layout_constraintTop_toBottomOf="@+id/BTCHANGE"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="1"
            style="@style/functionbutton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTMULTI"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="*"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="3"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/BT9"
            app:layout_constraintTop_toBottomOf="@+id/BTMINUS"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="3"
            style="@style/functionbutton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTMINUS"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/orbitron"
            android:text="-"
            app:autoSizeMaxTextSize="50dp"
            app:autoSizeMinTextSize="4dp"
            app:autoSizeTextType="uniform"
            app:layout_column="3"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/BT6"
            app:layout_constraintTop_toBottomOf="@+id/BTPLUS"
            app:layout_constraintWidth_percent="0.25"
            app:layout_row="2"
            style="@style/functionbutton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/CAL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Number"
        tools:ignore="MissingConstraints"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.005"
        android:background="@color/gold"/>

</androidx.constraintlayout.widget.ConstraintLayout>